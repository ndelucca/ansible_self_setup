[[keyboard.bindings]]
action = "SpawnNewInstance"
key = "N"
mods = "Command|Shift"

[[mouse.bindings]]
action = "Paste"
mods = "None"
mouse = "Middle"

[scrolling]
history = 10000

[selection]
