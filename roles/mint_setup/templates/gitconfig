[user]
	name = {{ git_user }}
	email = {{ git_email }}
[push]
	default = simple
[pull]
	rebase = True
[core]
	autocrlf = False
	commentchar = ";"
[alias]
	co = checkout
	ci = commit
	st = status
	br = branch
	logs = log --all --graph --date=short --pretty=format:"%C(yellow)%h%x20%C(green)%ad%x20%C(red)%an%x20%C(auto)%d%s"
	logm = log --all --graph --date=short --pretty=medium --abbrev-commit
[color]
	ui = True
